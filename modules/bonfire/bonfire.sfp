include "../cloud/cloud.sfp"

schema Bonfire extends Cloud {
	gateway is "ssh.bonfire.grid5000.fr"
	experiment : String
	location : String
	image_name : String
	wan_name : String
	servers { }

	sub create_vm {
		condition {}
		effect {}
	}

	sub delete_vm (node isref Node) {
		condition {
			node.in_cloud = this
		}
		effect {
			node.created = false
		}
	}
}
