schema File {
	path is ""
	exists is true
	content is ""
	user is ""
	group is ""

	procedure create (content isref String) {
		condition { }
		effect {
			this.exists is true
			this.content is content
		}
	}

	procedure set_ownership(user isref String, group isref String) {
		condition { }
		effect {
			this.user = user
			this.group = group
		}
	}

	procedure remove {
		condition { }
		effect {
			this.exists is false
		}
	}
}
